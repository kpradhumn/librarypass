<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studentAuth.Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/user_image"
                android:background="@drawable/style_user_image"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_image"
                android:text="Name"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_text_border"/>

            <TextView
                android:id="@+id/tvRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etName"
                android:text="Roll No."
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etRoll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvRoll"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/edit_text_border"/>

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etRoll"
                android:text="Contact No."
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvContact"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_text_border"/>

            <TextView
                android:id="@+id/tvHostel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etContact"
                android:text="Hostel"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etHostel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvHostel"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_text_border"/>

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etHostel"
                android:text="Year"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etYear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvYear"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_text_border"/>

            <TextView
                android:id="@+id/tvStream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etYear"
                android:text="Stream"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <Spinner
                android:id="@+id/spStream"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvStream"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"
                android:entries="@array/stream"
                android:autofillHints="Choose Stream"
                android:background="@drawable/edit_text_border"
                />


            <TextView
                android:id="@+id/tvBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spStream"
                android:text="Branch"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etBranch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvBranch"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_text_border"/>
            <TextView
                android:id="@+id/tvpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etBranch"
                android:text="Set Password"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etpwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvpwd"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_text_border"/>

            <TextView
                android:id="@+id/tvcnfpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etpwd"
                android:text="Confirm Password"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/kiit_green"/>
            <EditText
                android:id="@+id/etcnfpwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvcnfpwd"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_text_border"/>


            <Button
                android:id="@+id/btRegister"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/etcnfpwd"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="REGISTER"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_border"
                />
            <Button
                android:id="@+id/btupdate"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/etBranch"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="REGISTER"
                android:visibility="invisible"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_border"
                />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>