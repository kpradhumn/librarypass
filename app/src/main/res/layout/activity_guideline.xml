<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guideline">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp">



    <TextView
        android:id="@+id/tv_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="GUIDELINES"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/refresh1"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read the instruction carefully before genrating the pass."
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline1"/>

    <TextView
        android:id="@+id/tv_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Pass will be genrate between 6:00 pm - 7:00 pm.Please genrate the pass between given time slot."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline2"/>


    <TextView
        android:id="@+id/tv_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* You have to report to your respective library sharp 7:00 pm otherwise you will be marked as absent."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline3"/>

    <TextView
        android:id="@+id/tv_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Try not to cancel the pass unless necessary."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline4"/>

    <TextView
        android:id="@+id/tv_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Scan the QR code offered by the library officials just after reaching the library."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline5"/>

    <TextView
        android:id="@+id/tv_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Do not try to login from another devise before logging out from current devise."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline6"/>

    <TextView
        android:id="@+id/tv_guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Before leaving the library always consult with the library officials present there."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline7"/>

    <TextView
        android:id="@+id/tv_guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* After you reach the hostal, scan the QR code provided by the hostal officials."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guideline8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>