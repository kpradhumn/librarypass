<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".AboutUs">

    <TextView
        android:id="@+id/useless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT US"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <ScrollView
        android:id="@+id/scroll_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/useless"
        tools:layout_editor_absoluteX="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_aboutus"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/aboutus_img1"
                android:layout_width="270dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/chat_border_right"
                android:src="@drawable/aditi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraint_aboutus" />

            <ImageView
                android:id="@+id/mail1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mail"
                app:layout_constraintEnd_toStartOf="@id/aditi_mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutus_img1" />

            <TextView
                android:id="@+id/aditi_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  : 1705478@kiit.ac.in"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/mail1"
                app:layout_constraintTop_toBottomOf="@+id/aboutus_img1"

                tools:layout_editor_absoluteX="40dp" />


            <ImageView
                android:id="@+id/aboutus_img2"
                android:layout_width="270dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/chat_border_right"
                android:src="@drawable/pradhumnimg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aditi_mail" />


            <ImageView
                android:id="@+id/mail2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mail"
                app:layout_constraintEnd_toStartOf="@id/pradhumn_mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutus_img2" />

            <TextView
                android:id="@+id/pradhumn_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  : 1705515@kiit.ac.in"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/mail2"
                app:layout_constraintTop_toBottomOf="@+id/aboutus_img2"

                tools:layout_editor_absoluteX="40dp" />


            <ImageView
                android:id="@+id/aboutus_img3"
                android:layout_width="270dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/chat_border_right"
                android:src="@drawable/roli"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pradhumn_mail" />

            <ImageView
                android:id="@+id/mail3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mail"
                android:layout_marginLeft="77dp"
                app:layout_constraintEnd_toStartOf="@+id/roli_mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutus_img3" />

            <TextView
                android:id="@+id/roli_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="  : 1705530@kiit.ac.in"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/mail3"
                app:layout_constraintTop_toBottomOf="@+id/aboutus_img3" />


            <TextView
                android:id="@+id/useless0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/roli_mail"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>