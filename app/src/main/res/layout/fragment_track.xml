<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mainFragments.TrackFragment"
    android:padding="10dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:text="â˜¹"
        android:textSize="60dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_not_genrated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/emoji"
        android:text="Pass is not genrated yet!!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/tv_trackpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Pass"
        android:textSize="35dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_pass_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trackpass"
        android:text="date"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_pass_id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pass_date"
        android:text="pass id:"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_pass_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pass_date"
        android:layout_toRightOf="@+id/tv_pass_id1"
        android:layout_marginLeft="9dp"
        android:text="1705eae"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/dot_passgenrated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/track_start"
        android:layout_below="@+id/tv_pass_id2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_passgenrated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pass_id2"
        android:layout_toRightOf="@id/dot_passgenrated"
        android:text="Pass genrated"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/dot_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot_passgenrated"
        android:drawableLeft="@drawable/pass_continue"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/dot_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot_1"
        android:drawableLeft="@drawable/pass_continue"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-8dp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/dot_passverified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/track_complete"
        android:layout_below="@+id/dot_2"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tv_passverified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot_passgenrated"
        android:layout_toRightOf="@id/dot_passverified"
        android:text="Pass verified"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/dot_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot_passverified"
        android:drawableLeft="@drawable/pass_continue"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/dot_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot_3"
        android:drawableLeft="@drawable/pass_continue"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-8dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/dot_passreturned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/track_complete"
        android:layout_below="@+id/dot_4"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_passreturned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot_passverified"
        android:layout_toRightOf="@id/dot_passreturned"
        android:text="Pass verified"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"/>







</RelativeLayout>