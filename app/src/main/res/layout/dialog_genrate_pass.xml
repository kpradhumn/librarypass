<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_dpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/kiit_green"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_dname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dpass"
        android:text="Name :"
        android:textSize="25dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/tv_dname2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dpass"
        android:layout_toRightOf="@+id/tv_dname1"
        android:text="Student name"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tv_droll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dname1"
        android:text="Roll :"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_droll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dname1"
        android:layout_toRightOf="@+id/tv_dname1"
        android:text="Student Roll"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tv_ddate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_droll1"
        android:text="Date :"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_ddate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_droll2"
        android:layout_toRightOf="@+id/tv_ddate1"
        android:text="Today's date"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tv_dtime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ddate1"
        android:text="Time :"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_dtime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ddate1"
        android:layout_toRightOf="@+id/tv_dtime1"
        android:text="Time"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/tv_lib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dtime1"
        android:text="Library: "
        android:textSize="25dp"
        android:layout_marginTop="5dp"/>
    <Spinner
        android:id="@+id/spLib"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_dtime2"
        android:layout_toRightOf="@+id/tv_lib"
        android:layout_centerHorizontal="true"
        android:entries="@array/stream"
        android:autofillHints="Choose Stream"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_boxed_back"/>

    <Button
        android:id="@+id/btn_dgenrate_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lib"
        android:text="Genrate Pass"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/background_white"
        android:background="@drawable/button_border"/>


</RelativeLayout>